<div class="All-content">
  <h1 class="heading">Users Recycle Bin</h1>
     <div class="container">
      <div class="row">
         <div class="col-lg-8 bg-light">
            <%= render partial: "layouts/searchbox", locals:
               { url_path: "/users/recycle/search",
                 place: "Search",
                 method: "get"
               }
            %>
         </div>
      </div>
   </div>
<div class="container bootstrap snippets usertable bootdey">
    <div class="table-responsive">
    	<table class="table  datatable ">
    		<thead class="bg-dark">
    			<tr>
            <th class="heading">Id</th>
    				<th class="heading">Name</th>
    				<th class="heading">Email</th>
    				<th class="heading">Phonenumber</th>
            <th  class="heading">Role</th>
    				<th class="heading">Restore</th>
    			</tr>
    		</thead>
    		<tbody>
          <%unless @users.nil?%>
          <% @users.each do |user|%>
    		    <tr class="tablerow">
    				  <td><%= user.id %></td>
    				  <td><%= user.name%></td>
    				  <td><%= user.email%></td>
    				  <td><%= user.phonenumber%></td>
              <td><%= user.roll%></td>
    				  <td>
               <%= link_to image_tag("backward-time.png", border: 0,class: 'Edit-category-image'),
                    "/restore_user/" +"#{user.id}"
              %>
              </td>
    			  </tr>
          <%end%>
          <%end%>
        </tbody>
    	</table>
    </div>
</div>
</div>
