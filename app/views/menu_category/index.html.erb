<div class="All-content">
  <h1 class="heading">Menu Category</h1>
  <div class="Menu-category row">
    <%if @current_user.roll == "admin"%>
       <%= render partial: "layouts/searchbox", locals:
        {
          url_path: "/menu_category",
          place: "Add",
          method: "post",
        }
      %>
    <%end%>
    <%= render partial: "layouts/searchbox", locals:
        {
          url_path: search_menu_category_path,
          place: "Search",
          method: "get",
        }
    %>
  </div>
  <div class="container my-3">
    <div class="row">
      <div class="<%= @current_user.roll == "admin"? "col-lg-8": "col-lg-5"%>">
        <ul class="list-group list-group-flush">
          <% @categories.each do |category|%>
            <%= link_to menu_items_path(item_id: category.id), class: "link-tag" do %>
              <li class="list-group-item Categories pt-4  bg-light mt-2 pb-3 mb-4">
                <h1 class="Header alignheader"><%= category.name%></h1>
                <%if @current_user.roll == "admin"%>
                    <%= link_to image_tag("edit.png", border: 0,class: 'Edit-category-image'),
                        edit_menu_category_path(category)
                    %>
                    <%= form_with(url: "/menu_category/#{category.id}",
                        method:"delete",data: {confirm: "Are you sure?" }) do
                    %>
                      <%= image_submit_tag( "delete.png",
                                class: 'Delete-category-image')
                      %>
                    <%end%>
                    <%= form_with(url: "/menu_category/update/#{category.id}", method: "put") do %>
                      <%= check_box_tag("status", "isActive", category.status ,
                              class: "Active",
                              onclick: "this.form.submit()",
                              )
                      %>
                    <%end%>
                <%end%>
                <div class='<%= category.status? ? "Active" : "InActive"%>'><%= category.status? ? "Active" : "InActive"  %></div>
              </li>
            <%end%>
          <%end%>
        </ul>
      </div>
      <% if @current_user.roll != "admin" %>
        <div class="col-lg-4">
          <%= render :partial => "carts/cartitems"%>
        </div>
      <%end%>
    </div>
  </div>
</div>
