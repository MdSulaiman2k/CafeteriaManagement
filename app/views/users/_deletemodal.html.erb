<div class="modal fade" id="DeleteAccount" tabindex="-1" aria-labelledby="UserInputLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
       <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete Account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h1 class="heading"><h1>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= form_with(url: "/users/#{userid}" , method:"delete" , class:"formalign") do |form| %>
            <%= form.submit "Delete Account",
              class: "btn btn-primary"
            %>
        <%end%>
      </div>
    </div>
  </div>
</div>
