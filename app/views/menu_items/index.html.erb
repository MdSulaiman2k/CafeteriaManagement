<div class="All-content">
   <h1 class="heading">Menu Items</h1>
   <div class="MenuItemContainer">
      <div class="Search-menu-item col-3">
         <%= form_with(url: search_menu_item_path , method: "get") do |form|%>
            <%= form.text_field :name,
                                class: "SearchItem",
                                autocomplete: "off",
                                placeholder: "Search"
            %>
            <%= form.submit "Search",
                            class: "btn btn-outline-success Search Item-button"
            %>
         <%end%>
      </div>
      <div class="AddMenu">
         <abbr title="Add Menu Item">
            <%= link_to image_tag("plus.png", border: 0,class: 'add_menu_items'),
                                 menu_add_item_path
            %>
          </abbr>
      </div>
   </div>
   <div class="row">
      <%@items.each do |item|%>
         <div class="col-3 MenuItems">
            <%= form_with(url: "/menu_items/update/#{item.id}", method: "put") do %>
               <%= check_box_tag("status", "isActive", item.status == "Active" ? true : false ,
                              class: "status",
                              onclick: "this.form.submit()",
                               )
               %>
             <%end%>
            <div class="status"><%= item.status  %></div>
            <h3 class="Item-name"><%= item.name.capitalize()%><span class="Edit-items">
               <abbr title="Add Menu Item">
                  <%= link_to image_tag("edit.png", border: 0,class: 'Edit-category-image'),
                                 edit_menu_item_path(item)
                  %>
                </abbr>
               </span>
            </h3>
            <p class="Item-description"><%= item.description %></p>
            <h4 class="Item-price"> &#x20B9; <%=item.price%></h4>
            <h4 class="Item-category"><%= MenuCategory.where(id: item.menu_category_id ).first.name%></h4>
         </div>
      <%end%>
   </div>
   <div class="pagination">
      <%== pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
</div>
